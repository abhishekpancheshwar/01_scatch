<%- include('./partials/header') %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-50 py-6 sm:py-12">
    <% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block text-white">
            <%= error %>
        </span>
    </div>
    <% } %>
    <div class="bg-white shadow-xl rounded-lg overflow-hidden w-full max-w-4xl">
        <div class="md:flex">
            <div class="w-full md:w-1/2 p-8">
                <h3 class="text-4xl font-semibold">Welcome to <span class="text-blue-400">Scatch</span></h3>
                <h4 class="text-2xl mb-5">Create your account</h4>
                <form autocomplete="off" action="/users/register" method="post">
                    <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3"
                        type="text" placeholder="Full Name" name="fullname" required>
                    <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3"
                        type="email" placeholder="Email" name="email" required>
                    <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3"
                        type="password" placeholder="Password" name="password" required>
                    <input class="bg-blue-500 text-white px-5 py-3 rounded-full w-full mt-2 cursor-pointer hover:bg-blue-600"
                        type="submit" value="Create My Account">
                </form>
            </div>
            <div class="hidden md:flex w-1/2 items-center justify-center bg-blue-500 text-white p-8">
                <div class="text-center">
                    <h4 class="text-2xl mb-5">Login to your account</h4>
                    <form autocomplete="off" action="/users/login" method="post">
                        <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3 text-black"
                            type="email" placeholder="Email" name="email" required>
                        <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3 text-black"
                            type="password" placeholder="Password" name="password" required>
                        <input class="bg-blue-500 text-white px-5 py-3 rounded-full w-full mt-2 cursor-pointer hover:bg-blue-600"
                            type="submit" value="Login">
                    </form>
                </div>
            </div>
        </div>
        <div class="md:hidden flex flex-col p-8">
            <h4 class="text-2xl mb-5">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3 text-black" type="email"
                    placeholder="Email" name="email" required>
                <input class="bg-gray-100 block w-full px-3 py-2 border border-gray-300 rounded-md mb-3 text-black" type="password"
                    placeholder="Password" name="password" required>
                <input class="bg-blue-500 text-white px-5 py-3 rounded-full w-full mt-2 cursor-pointer hover:bg-blue-600"
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
